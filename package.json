{
  "name": "mux-player-sdk-framework",
  "version": "2.1.0",
  "author": "Mux, Inc.",
  "description": "Mux analytics plugin for <player name>",
  "main": "dist/yourPlayer-mux.js",
  "scripts": {
    "clean": "rm -rf build dist",
    "mkdirs": "mkdir -p build dist",
    "lint": "eslint 'src/*.js' --quiet",
    "test": "npm-run-all lint",
    "package": "npm-run-all clean mkdirs lint test package:build package:remove-requirejs-support package:bannerize",
    "package:build": "webpack --config webpack.prod.js",
    "package:remove-requirejs-support": "echo '(function(){var define=false;' > dist/yourPlayer-mux.js && cat build/yourPlayer-mux.js >> dist/yourPlayer-mux.js && echo '})();' >> dist/yourPlayer-mux.js",
    "package:bannerize": "bannerize dist/yourPlayer-mux.js --banner=scripts/banner.ejs",
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "deploy": "npm run package && babel-node scripts/deploy.js"
  },
  "dependencies": {},
  "devDependencies": {
    "aws-sdk": "^2.2.37",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.5.0",
    "bannerize": "^1.0.2",
    "eslint": "^2.13.1",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-standard": "^1.3.2",
    "global": "^4.3.0",
    "mux-embed": "^2.7.0",
    "npm-run-all": "^2.2.0",
    "path": "^0.12.7",
    "sinon": "^3.0.0",
    "uglify-js": "^2.5.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.6.0",
    "webpack-auto-inject-version": "^1.0.0",
    "webpack-dev-server": "^2.8.2",
    "webpack-merge": "^4.1.0"
  }
}
